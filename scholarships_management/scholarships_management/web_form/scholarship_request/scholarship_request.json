 "client_script": "function hide_all(){\n    frappe.web_form.set_df_property('have_an_order_id', 'reqd', 1);\n    \n    frappe.web_form.set_df_property('university_order_id', 'hidden', 1);\n    frappe.web_form.set_df_property('university', 'hidden', 1);\n    \n    frappe.web_form.set_df_property('grade_report', 'hidden', 1);\n    frappe.web_form.set_df_property('recommendation', 'hidden', 1);\n    frappe.web_form.set_df_property('health_record', 'hidden', 1);\n    frappe.web_form.set_df_property('criminal_record', 'hidden', 1);\n    frappe.web_form.set_df_property('biography_report', 'hidden', 1);\n    frappe.web_form.set_df_property('secondary_certificate', 'hidden', 1);\n}\n\nfunction hide_docs(){\n    frappe.web_form.set_df_property('grade_report', 'hidden', 1);\n    frappe.web_form.set_df_property('recommendation', 'hidden', 1);\n    frappe.web_form.set_df_property('health_record', 'hidden', 1);\n    frappe.web_form.set_df_property('criminal_record', 'hidden', 1);\n    frappe.web_form.set_df_property('biography_report', 'hidden', 1);\n    frappe.web_form.set_df_property('secondary_certificate', 'hidden', 1);\n    \n    frappe.web_form.set_df_property('grade_report', 'reqd', 0);\n    frappe.web_form.set_df_property('recommendation', 'reqd', 0);\n    frappe.web_form.set_df_property('health_record', 'reqd', 0);\n    frappe.web_form.set_df_property('criminal_record', 'reqd', 0);\n    frappe.web_form.set_df_property('biography_report', 'reqd', 0);\n    frappe.web_form.set_df_property('secondary_certificate', 'reqd', 0);\n    \n}\n\nfunction show_all(){\n    frappe.web_form.set_df_property('university_order_id', 'hidden', 1);\n    frappe.web_form.set_df_property('university_order_id', 'reqd', 0);\n    \n    frappe.web_form.set_df_property('university', 'hidden', 1);\n    frappe.web_form.set_df_property('university', 'reqd', 0);\n    \n    frappe.web_form.set_df_property('grade_report', 'hidden', 0);\n    frappe.web_form.set_df_property('recommendation', 'hidden', 0);\n    frappe.web_form.set_df_property('health_record', 'hidden', 0);\n    frappe.web_form.set_df_property('criminal_record', 'hidden', 0);\n    frappe.web_form.set_df_property('biography_report', 'hidden', 0);\n    frappe.web_form.set_df_property('secondary_certificate', 'hidden', 0);\n    \n    frappe.web_form.set_df_property('grade_report', 'reqd', 1);\n    frappe.web_form.set_df_property('recommendation', 'reqd', 1);\n    frappe.web_form.set_df_property('health_record', 'reqd', 1);\n    frappe.web_form.set_df_property('criminal_record', 'reqd', 1);\n    frappe.web_form.set_df_property('biography_report', 'reqd', 1);\n    frappe.web_form.set_df_property('secondary_certificate', 'reqd', 1);\n}\n\nfunction get_order_id(){\n    frappe.web_form.set_df_property('university_order_id', 'hidden', 0);\n    frappe.web_form.set_df_property('university_order_id', 'reqd', 1);\n    \n    frappe.web_form.set_df_property('university', 'hidden', 0);\n    frappe.web_form.set_df_property('university', 'reqd', 1);\n    hide_docs();\n}\n\nhide_all();\n\nfrappe.web_form.on('have_an_order_id', (field, value) => {\n    if (value === 'Yes'){\n        get_order_id();\n    } else {\n        show_all();\n    }\n});\n\nfunction ValidateEmail(inEmail){\n    var mailformat = /^\\w+([\\.-]?\\w+)*@\\w+([\\.-]?\\w+)*(\\.\\w{2,3})+$/;\n    try {\n    if(inEmail.match(mailformat))\n        {\n            return true;\n        }\n    else\n        {\n            return false;\n        }\n    } catch (err) {\n        return false;\n    }\n}\n\nfunction ValidateWhatsNumber(inNumber){\n    var countryCodeFormat = /^\\+?\\d+$/;\n    try{\n    if(inNumber.match(countryCodeFormat)[0])\n        {\n            return true;\n        }\n    else\n        {\n            return false;\n        }\n    } catch (err){\n        return false;\n    }\n}\n\nfrappe.web_form.validate = () => {\n    if (ValidateEmail(frappe.web_form.get_value('email')) && ValidateWhatsNumber(frappe.web_form.get_value('whatsapp_number'))){\n        return true ;\n    } else {\n        return false ;\n    }\n}\n\nfrappe.web_form.after_save= () => {\n   window.location = frappe.web_form.success_url\n}\n\n",
